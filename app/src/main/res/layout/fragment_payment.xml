<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_info_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".View.PaymentFragment">



    <ImageView
        android:id="@+id/icon_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_card"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_mastercard"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <!-- MasterCard Icon -->
    <ImageView
        android:id="@+id/icon_mastercard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_mastercard"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/icon_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_visa" />

    <!-- Visa Icon -->
    <ImageView
        android:id="@+id/icon_visa"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/icon_visa"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/icon_mastercard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_paypal" />

    <!-- PayPal Icon -->
    <ImageView
        android:id="@+id/icon_paypal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/card_paypal"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/icon_visa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_western" />

    <!-- Western Union Icon -->
    <ImageView
        android:id="@+id/icon_western"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/card_western"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/icon_paypal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_wire" />

    <!-- Wire Transfer Icon -->
    <ImageView
        android:id="@+id/icon_wire"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/card_wire"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/icon_western"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_card_number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_card">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card number"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_card_nam"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_card_number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name on card"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_experation"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_card_nam">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/experation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expiration MM/YY"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_cvv"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_experation">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="123"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/orange"
        android:text="Pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_cvv" />
    <LinearLayout
        android:id="@+id/layout_security_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_pay"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_shield"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/icon_visa"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/icon_western" />

            <TextView
                android:id="@+id/tv_security_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protects your card information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2ae149"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_true"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@+id/icon_visa"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/icon_western" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Card Industry Data Security Standard (PCI DSS) when handling card data"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_true"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/icon_visa"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/icon_western" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card information is secure and uncompromised"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_true"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/icon_visa"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/icon_western" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All data is encrypted"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_true"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/icon_visa"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/icon_western" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All data is encrypted"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_true"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/icon_visa"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/icon_western" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We never sell your card information"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>