<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_product"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_info"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_error" />

    <ImageView
        android:id="@+id/icon_add_Panier"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="125dp"
        android:background="@drawable/circular_shep"
        android:layout_marginStart="132dp"
        android:src="@drawable/baseline_add_24"/>


    <TextView
        android:id="@+id/info_tv_discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_info"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="discount price"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/info_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_tv_namP"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        style="@style/Base.Theme.MyApplication"
        android:maxLines="1"
        android:text="@string/description_of_prodact"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/info_tv_priceP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="170dp"
        android:layout_toEndOf="@+id/info_tv_discount_price"
        android:foreground="@drawable/strikethrough"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/info_tv_namP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_tv_priceP"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        style="@style/Base.Theme.MyApplication"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:text="@string/name_of_prodact" />

</RelativeLayout>