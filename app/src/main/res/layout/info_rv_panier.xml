<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_info_panier"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/background_error" />

    <ImageView
        android:id="@+id/icon_delete_Panier"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="160dp"
        android:src="@drawable/icon_remove"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/image_info_panier"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_tv_description_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5sp"
            android:text="@string/description_of_prodact" />
        <TextView
            android:id="@+id/info_tv_namP_panier"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="@string/name_of_prodact" />



        <TextView
            android:id="@+id/info_tv_quantity_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="@string/quantity_of_prodact" />
        <TextView
            android:id="@+id/info_tv_priceDiscount_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:layout_marginTop="5dp"
            android:text="Price of prodact" />

        <TextView
            android:id="@+id/info_tv_priceP_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:foreground="@drawable/strikethrough"
            android:layout_marginTop="5dp"
            android:text="@string/prace_of_prodact" />

    </LinearLayout>

</RelativeLayout>