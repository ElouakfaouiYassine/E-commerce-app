<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/info_tv_namP_panier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingStart="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/name_of_prodact"
        android:background="#e7e7e7"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/checkbox_product"
        android:layout_toRightOf="@id/checkbox_product" />
    <ImageView
        android:id="@+id/image_info_panier"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="80dp"
        android:src="@drawable/background_error"
        android:contentDescription="@string/description_of_prodact"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/icon_delete_Panier"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@id/image_info_panier"
        android:layout_alignEnd="@id/image_info_panier"
        android:src="@drawable/icon_remove"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_info_panier"
        android:layout_toRightOf="@id/image_info_panier"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/info_tv_description_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/description_of_prodact"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/info_tv_quantity_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            android:text="@string/quantity_of_prodact" />

        <TextView
            android:id="@+id/info_tv_priceDiscount_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:layout_marginTop="4dp"
            android:text="Price of product" />

        <TextView
            android:id="@+id/info_tv_priceP_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:foreground="@drawable/strikethrough"
            android:text="@string/prace_of_prodact" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:background="#e7e7e7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fast Delivery"
            android:textSize="16sp"
            android:textColor="#3cb80f"
            android:background="#e7e7e7"/>
    </LinearLayout>
</RelativeLayout>
